<!-- res/layout/activity_vehicle_list.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarSummonList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" />

        <SearchView
            android:id="@+id/searchViewSummon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:queryHint="Search by Plate Number" >

        </SearchView>

        <ListView
            android:id="@+id/listViewSummons"
            android:layout_width="match_parent"
            android:layout_height="528dp"
            android:layout_below="@id/searchViewSummon"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="0.5dp"
            android:padding="16dp" />

        <Button
            android:id="@+id/addSummonButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Summon" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
