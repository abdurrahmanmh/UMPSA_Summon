<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VehicleMenu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarVehicle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_weight="0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:paddingBottom="30dp"
            android:text="Note : Only one Vehicle Per Academic Year"
            android:textAlignment="center"
            android:textColor="#405DB4"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/carDetailText"
            android:layout_width="333dp"
            android:layout_height="206dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="0"
            android:background="@drawable/blue_box_second"
            android:gravity="center"
            android:padding="10dp"
            android:text="No car registered"
            android:textAlignment="center"
            android:textColor="#405DB4" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="281dp"
            android:layout_weight="0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Edit Button -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabEditVehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#1976D1"
                android:clickable="true"
                app:srcCompat="@drawable/ic_edit" />

            <!-- Add Button -->
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabAddVehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:backgroundTint="#1976D1"
                android:clickable="true"
                app:srcCompat="@android:drawable/ic_menu_add" />

            <!-- Delete Button -->
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabDeleteVehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#1976D1"
                android:clickable="true"
                app:srcCompat="@android:drawable/ic_menu_delete" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>